<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net461;net48;net6.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <AssemblyName>Pustalorc.MySqlConnector.Wrapper</AssemblyName>
        <RootNamespace>Pustalorc.MySqlConnector.Wrapper</RootNamespace>
        <Version>3.0.2</Version>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Pustalorc</Authors>
        <Description>A wrapper for MySqlConnector which helps running queries in a simple manner without the need to fully write the same code for MySql over a large project.</Description>
        <Copyright>Copyright © 2020-2021 Pustalorc</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Pustalorc/MySqlConnectorWrapper</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Pustalorc/MySqlConnectorWrapper</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageTags>MySql MySqlConnector Connector Wrapper Caching</PackageTags>
        <PackageReleaseNotes>Updated to latest FrequencyCache
Updated to latest MySqlConnector
Added support for .NET 6.0</PackageReleaseNotes>
        <PackageId>Pustalorc.MySqlConnectorWrapper</PackageId>
        <PackageVersion>3.0.2</PackageVersion>
        <Product>Pustalorc.MySqlConnectorWrapper</Product>
        <LangVersion>10</LangVersion>
        <Nullable>enable</Nullable>
        <AssemblyVersion>3.0.2</AssemblyVersion>
        <FileVersion>3.0.2</FileVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\MySqlConnector.Wrapper.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MySqlConnector" Version="2.1.0" />
        <PackageReference Include="Pustalorc.FrequencyCache" Version="1.2.1" />
    </ItemGroup>

</Project>
